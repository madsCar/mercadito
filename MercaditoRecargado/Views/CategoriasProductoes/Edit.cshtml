@model MercaditoRecargado.Models.CategoriasProducto

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>





<div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
            <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Agregar nueva categoría</h3>
                    <section>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CategoriasProductoID)
                            <div class="row">

                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

                                        <label class="form-label" for="lastName">Categoría descripción</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input class="btn btn-default btn-primary btn-lg" type="submit" value="Guardar categoría" />
                                    </div>

                                </div>
                            </div>



                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
