@model IEnumerable<MercaditoRecargado.Models.DatosTarjeta>

@{
    ViewBag.Title = "Mis Tarjetas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Last4)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroTarjeta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaVencimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CVV)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClienteID)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Last4)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroTarjeta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaVencimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CVV)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClienteID)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DatosTarjetaID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.DatosTarjetaID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.DatosTarjetaID })
                                </td>
                            </tr>
                        </tbody>
                    }

                </table>
        </div>
    </div>
</div>
           