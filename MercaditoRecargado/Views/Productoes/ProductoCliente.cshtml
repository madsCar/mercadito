@model IEnumerable<MercaditoRecargado.Models.Producto>

@{
    ViewBag.Title = "ProductoCliente";
}

<h2>Productos</h2>


<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {

                <div>
                    <div class="card product-card card-static pb-3">
                       <a class="card-img-top d-block overflow-hidden" href="grocery-single.html"><img src="~/img/@Html.DisplayFor(modelItem => item.Imagen)" alt="Product"></a>
                        <div class="card-body py-2">
                            <a class="product-meta d-block fs-xs pb-1">@Html.DisplayFor(modelItem => item.CategoriasProducto.Descripcion)</a>
                            <h3 class="product-title fs-sm text-truncate"><a href="grocery-single.html">@Html.DisplayFor(modelItem => item.nombre)</a></h3>
                            <div class="product-price"><span class="text-accent">$@Html.DisplayFor(modelItem => item.Precio)<small></small></span></div>
                        </div>
                        <div class="product-floating-btn">
                           <a class="btn btn-primary btn-shadow btn-sm" type="button" href="@Url.Action("Buy", "Cart", new { id = item.ProductoID })">+ <i class="bi bi-cart-plus-fill"></i></a>
                        </div>
                    </div>
