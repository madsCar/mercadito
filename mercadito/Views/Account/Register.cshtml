@model mercadito.Models.Cliente; 

@{
    ViewBag.Title = "Register";
}




<div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
            <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Crea una cuenta</h3>
                    <section>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="row">

                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.ApellidoPat, new { @class = "form-control form-control-lg", id= "lastName" })
                                        <label class="form-label" for="lastName">Apellido Paterno</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.ApellidoMat, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="lastName">Apellido Materno</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="firstName">Nombre(s)</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        @Html.EditorFor(m => m.FechaNacimiento, new { @class = "form-control form-control-lg" })
                                        <label for="birthdayDate" class="form-label">Fecha de Nacimiento</label>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.zipCode, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="lastName">Código Postal</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="emailAddress">Correo Electrónico</label>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="phoneNumber">Contraseña</label>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg" })
                                        <label class="form-label" for="phoneNumber">Confirmar contraseña</label>
                                    </div>

                                </div>


                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-default btn-primary btn-lg" type="submit" value="Registrarse" />
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

